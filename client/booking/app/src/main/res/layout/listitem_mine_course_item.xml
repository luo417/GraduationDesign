<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/len_10"
    android:layout_marginLeft="@dimen/len_10"
    android:layout_marginRight="@dimen/len_10"
    android:background="@drawable/listitem_mine_course_bg"
    android:padding="@dimen/padding_common">

    <ImageView
        android:id="@+id/mci_avatar"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/padding_common"
        android:layout_marginRight="@dimen/padding_common"
        android:contentDescription="@string/app_name"
        tools:background="#fff0f0f0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView style="@style/AppTheme.Label.Title"
            android:id="@+id/mci_title"
            android:minWidth="200dp"
            android:layout_marginTop="@dimen/padding_common_d"
            tools:background="#fff0f0f0"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/AppTheme.Label"
                android:id="@+id/mci_grade"
                android:text="高级"
                android:layout_marginTop="@dimen/padding_common_d"
                android:textColor="@android:color/holo_orange_dark"
                tools:background="#fff0f0f0"/>
            <TextView
                style="@style/AppTheme.Label"
                android:text="  ·  "
                android:layout_marginTop="@dimen/padding_common_d"
                android:textColor="@android:color/holo_orange_dark"
                tools:background="#fff0f0f0"/>
            <TextView
                style="@style/AppTheme.Label"
                android:id="@+id/mci_price"
                android:text="￥299"
                android:minWidth="50dp"
                android:layout_marginTop="@dimen/padding_common_d"
                android:textColor="@android:color/holo_orange_dark"
                tools:background="#fff0f0f0"/>
        </LinearLayout>
        <TextView style="@style/AppTheme.Label"
            android:id="@+id/mci_seat"
            android:minWidth="100dp"
            android:layout_marginTop="@dimen/padding_common_d"
            android:text="座位：109号教室 5排7列"
            tools:background="#fff0f0f0"/>
        <TextView style="@style/AppTheme.Label"
            android:id="@+id/mci_time"
            android:minWidth="100dp"
            android:layout_marginTop="@dimen/padding_common_d"
            android:text="预约时间：2018-05-05 15:06:50"
            tools:background="#fff0f0f0"/>
    </LinearLayout>

</LinearLayout>

